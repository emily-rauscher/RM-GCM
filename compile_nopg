#!/bin/bash -x

rm -f igcm3_nopg

#OPT='-O3 -xHost'
OPT='-Ofast -xHost'
#PROF='-g -p'
REPORT='-warn noalign'
#PARALLEL='-openmp'
#OTHER_OPTS='-ftrapuv'
ifort -g $OPT $REPORT $PARALLEL $OTHER_OPTS -r8 -132 -traceback -o igcm3_nopg testing-two-stream.f testing-setuprad.f cmltri_nopg.f cbalanc.f cblayer.f cblsurf.f ccalndr.f ccbadj.f ccbcon.f ccldtrn.f ccolamt.f cconvec.f ccubm.f ccudif.f cdanalv.f cdedd.f cdgrmlt.f cdifuse.f cdlsgcr.f cdryadj.f cdstep.f cenergy.f chanal.f chanal1.f chanalv.f chexp.f chexp1.f chexpv.f cictrac.f cinibal.f cinigau.f ciniphys.f ciniqs.f cinires.f ciniresij.f ciniset.f cinisi.f cinisp.f cinistr.f cinisurf.f inisimprad.f inivarparam.f cinital.f cinterp.f cirrad.f clgndre.f clscrn.f cltd.f cltddia.f clti.f cltidt.f cmascor.f cmatinv.f cmgrmlt.f cmorc.f  cnikos.f cnoise.f co3interp.f cpqsat.f cpvcr.f cradsw.f csetres.f csettee.f csetzt.f csfct.f cspdel2.f cspop.f csurfm.f csw.f cswtt.f ctbal.f ctstep.f cvdiff.f cwrsps.f cxsect.f cfft991.f cssum.f csdot.f cicamax.f  cgwtlt.f cset99.f cqreig.f csgetrf.f csgetri.f csgemm.f crpassm.f cqpassm.f chessen.f cqrt.f cxerbla.f cilaenv.f csgetf2.f cslaswp.f cstrsm.f cstrtri.f csgemv.f csswap.f clsame.f cisamax.f csscal.f csger.f cstrmm.f cstrti2.f cstrmv.f cranf.f xsect2.f xsect3.f filecopy.f finalorb.f Binary.f rradiation.f rcalc_radheat.f rradsub.f rsetuprad_simple.f rradtran.f rinterpol.f roppr.f roppr1.f rtwostr.f radd.f rnewflux1.f rradout.f rfluxld.f rmakeclouds.f ropprmulti.f

rm -r Isaac-Tests
mkdir Isaac-Tests
cp igcm3_nopg Isaac-Tests
cp fort.7 Isaac-Tests
cd Isaac-Tests
./igcm3_nopg